@using MvcProje.Models.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<table class="table table-bordered" style="color:azure">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>ÜRÜN MARKA</th>
        <th>ÜRÜN KATEGORİ</th>
        <th>ÜRÜN FİYAT</th>
        <th>ÜRÜN KALAN STOK</th> 
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    <tbody>
        @foreach(var urn in Model)
        { 
        <tr>
            
            <td>@urn.URUNID</td>
            <td>@urn.URUNAD</td>
            <td>@urn.MARKA</td>
            <td>@urn.TBLKATEGORILER.KATEGORIAD</td>
            <td>@urn.FIYAT</td>
            <td>@urn.STOK</td>
            <td><a href="/Urun/SIL/@urn.URUNID" class="btn btn-danger">SİL</a></td>
            <td><a href="/URUN/UrunGetir/@urn.URUNID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
        }
            
    </tbody>


</table>

<a href="/URUN/URUNEKLE/" class=" btn btn-primary">YENİ ÜRÜN EKLE</a>